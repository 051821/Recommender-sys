pipeline {
    agent any

    environment {
        // Use forward slashes for cross-platform compatibility
        REPO_URL = 'https://github.com/051821/Recommender-sys.git'
        BRANCH = 'main'
    }

    stages {
        stage('Checkout Code') {
            steps {
                script {
                    // Clean workspace first (Windows compatible)
                    bat 'if exist Recommender-sys rmdir /s /q Recommender-sys'
                    
                    // Clone repository (public repo - no credentials needed)
                    bat """
                        git clone --depth 1 --branch %BRANCH% %REPO_URL%
                        cd Recommender-sys
                        dir /b  // Verify files exist
                    """
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                bat '''
                    cd Recommender-sys\\app
                    docker-compose build
                '''
            }
        }

        stage('Run Containers') {
            steps {
                bat '''
                    cd Recommender-sys\\app
                    docker-compose up -d
                    timeout /t 10 /nobreak  // Wait for containers to initialize
                '''
            }
        }

        stage('Verify') {
            steps {
                bat '''
                    cd Recommender-sys\\app
                    docker ps --filter name=restaurant
                    docker exec restaurant-container python -c "import pandas as pd; print('System ready!')"
                '''
            }
        }
    }

    post {
        always {
            bat '''
                cd Recommender-sys\\app 2>nul && docker-compose down -v
                docker system prune -f
            '''
            cleanWs()
        }
        failure {
            emailext (
                subject: "FAILED: ${env.JOB_NAME} - Build ${env.BUILD_NUMBER}",
                body: "Check console output at ${env.BUILD_URL}console",
                to: 'anushkasagar302@gmsil.com'
            )
        }
    }
}