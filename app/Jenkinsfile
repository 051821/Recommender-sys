pipeline {
    agent any

    environment {
        COMPOSE_PROJECT_NAME = 'recommender-backend'
    }

    stages {
        stage('Clone Repository') {
            steps {
                // Ensure Git is available
                bat 'git clone https://github.com/051821/Recommender-sys'
            }
        }

        stage('Build Docker Images') {
            steps {
                // Build Docker images using the correct compose file path
                bat 'docker-compose -f Recommender-sys/app/Docker-compose.yml build'
            }
        }

        stage('Run Containers') {
            steps {
                // Start the containers in detached mode
                bat 'docker-compose -f Recommender-sys/app/Docker-compose.yml up -d'
            }
        }

        stage('Check Running Containers') {
            steps {
                // Check the status of the running containers
                bat 'docker ps'
            }
        }
    }

    post {
        always {
            echo 'Pipeline finished!'
        }
    }
}




