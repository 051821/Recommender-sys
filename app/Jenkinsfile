pipeline {
    agent any

    environment {
        REPO_URL = 'https://github.com/051821/Recommender-sys.git'
        BRANCH = 'main'
        APP_DIR = 'Recommender-sys/app'  // Adjust if needed
    }

    stages {
        stage('Clone Repository') {
            steps {
                script {
                    echo "Cloning repository from ${REPO_URL}..."
                    git branch: "${BRANCH}", url: "${REPO_URL}"
                }
            }
        }

        stage('Build Docker Containers') {
            steps {
                dir("${APP_DIR}") {
                    script {
                        echo "Building Docker containers..."
                        bat 'docker-compose -f docker-compose.yml build'  // Explicitly specify the config file
                    }
                }
            }
        }

        stage('Run Containers') {
            steps {
                dir("${APP_DIR}") {
                    script {
                        echo "Running Docker containers..."
                        bat 'docker-compose -f docker-compose.yml up -d'  // Explicitly specify the config file
                    }
                }
            }
        }

        stage('Verify Containers') {
            steps {
                script {
                    echo "Verifying Docker containers..."
                    bat 'docker ps'
                }
            }
        }
    }

    post {
        always {
            echo 'Cleaning up Docker containers...'
            dir("${APP_DIR}") {
                script {
                    echo "Shutting down Docker containers..."
                    bat 'docker-compose -f docker-compose.yml down -v'  // Explicitly specify the config file
                }
            }
            cleanWs()
        }
    }
}
